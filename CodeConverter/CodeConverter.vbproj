    <PackageReference Include="Microsoft.CodeAnalysis.VisualBasic" Version="2.8.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HashLibrary\HashLibrary.csproj" />
  </ItemGroup>
